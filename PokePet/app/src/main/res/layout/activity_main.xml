<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to your PokePet!"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to make the egg hatch!"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:id="@+id/eggImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/egg"
        android:contentDescription="Egg image"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/namePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like to name it?"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/petNameInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:gravity="center"
        android:inputType="textPersonName"
        android:background="@android:drawable/editbox_background"
        android:padding="4dp" />

</LinearLayout>
